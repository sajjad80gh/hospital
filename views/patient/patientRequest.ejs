<%- include('../includes/head') %>

</head>
<body>
    <%- include('../includes/header.ejs') %>
    <div class="container">
        <h2 class="text-center">درخواست</h2>
        <form method="POST" action="/patient/request">
            <textarea class="textarea" name="message" placeholder="درخواست بیمار"></textarea>
            <input type="hidden" name="idPatient" value="<%=idPatient%>">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
            <button class="btn-link" type="submit" >ثبت</button>
        </form>
    </div> 
    <hr/>
    <div class="container">
        <h2 class="text-center">درخواست</h2>
        <% patient.map(val=>{ %>
        <div class="requestPatient mb-2">
            <div class="row justify-between">
                <div>
                    <img src=<%=val.imgSrc%> alt="" width="15" height="15"/>
                    <span><%=val.id.username%></span>
                </div>
                <div class="font-12">
                    <%=val.created%>
                </div>
            </div>
            <div class="requestBody "><%=val.text%></div>
                <%if(val.reply !== null){ console.log(val.reply)%>
                    <%val.reply.map(reply=>{%>
                    <hr/>
                    <div class="row justify-between">
                        <div>
                            <img src=<%=reply.id.image%> alt="" width="15" height="15"/>
                            <span><%=reply.id.username%></span>
                        </div>
                        <div class="font-12">
                            <%=reply.created%>
                        </div>
                    </div>
                    <div class="requestBody "><%=reply.text%></div>
                <%})}%>    
        </div>
        <%})%>
    </div>
<%- include('../includes/footer') %>